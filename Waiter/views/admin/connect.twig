{% extends 'admin/vacation-soup.twig' %}
{% block content %}
{% embed 'admin/form.twig' %}
{% block form_name %}connect{% endblock form_name %}
{% block form_content %}
<div class="vs-content tab-connect row">
    <div class="col-lg-8 col-sm-12">
        <div class="vs-panel row">
            <div id="title" class="col-sm-12">
                <h1>Social Connections</h1>
                <p>
                    Much of the power in your strategy comes in how widely you share your posts.
                    Please enter your social urls here so we can widen the message.
                </p>
                <div class="row">
                    <div class="col-sm-8">
                        <div class="social field">
                            <div class="social-icon facebook">
                                <i class="fa fa-5x fa-facebook-square"></i>
                            </div>
                            <label for="facebook_link">
                                Facebook
                            </label>
                            <input type="text" class="persist" name="Social.facebook_link" id="facebook_link" value="{{ social.facebook_link }}"/>
                        </div>
                        <div class="social field">
                            <div class="social-icon twitter">
                                <i class="fa fa-5x fa-twitter-square"></i>
                            </div>
                            <label for="twitter_link">
                                Twitter
                            </label>
                            <input type="text" class="persist" name="Social.twitter_link" id="twitter_link" value="{{ social.twitter_link }}"/>
                        </div>
                        <div class="social field">
                            <div class="social-icon pinterest">
                                <i class="fa fa-5x fa-pinterest-square"></i>
                            </div>
                            <label for="pinterest_link">
                                Pinterest
                            </label>
                            <input type="text" class="persist" name="Social.pinterest_link" id="pinterest_link" value="{{ social.pinterest_link }}"/>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-lg-4 col-sm-12">
        <div class="vs-panel row">
            <div id="title" class="col-sm-12">
                <h1>Vacation Soup Status</h1>
            </div>
            <div class="soup-icon hover col-sm-4">
                <img title="Connect" src="{{ soup.image_url }}/vacation_soup_FB_logo_180sq.png"/>
            </div>
            <div class="soup-status col-sm-8">
                <p>You are {{ true?'':'not' }} connected to Vacation Soup.</p>
                {% if true  %}
                    <p>All Vacation Soup services should be working, although this page does not automatically check each service currently</p>
                {% else %}
                    <p>You may not be connected due to a configuration error. Please check your parameters before contacting support@vacationsoup.com.</p>
                {% endif %}
            </div>
        </div>
        <div class="vs-panel row">
            <div id="title" class="col-sm-12">
                <h1>Vacation Soup HQ Settings</h1>
                <p>You should not change these values unless advised to do so by a member of the Vacation Soup team.</p>
                <div class="field">
                    <label for="kitchen_host">
                        Kitchen Host
                    </label>
                    <input type="text" class="persist" name="SoupWaiter.kitchen_host" id="kitchen_host" value="{{ soup.kitchen_host }}"/>
                </div>
                <div class="field">
                    <label for="kitchen_user">
                        Kitchen Username
                    </label>
                    <input type="text" class="persist" name="SoupWaiter.kitchen_user" id="kitchen_user" value="{{ soup.kitchen_user }}"/>
                </div>
                <div class="field">
                    <label for="kitchen_auth_api">
                        Kitchen Auth
                    </label>
                    <input type="text" class="persist" name="SoupWaiter.kitchen_jwt_api" id="kitchen_auth_api" value="{{ soup.kitchen_jwt_api }}"/>
                </div>
                <div class="field">
                    <label for="kitchen_api">
                        Kitchen Api
                    </label>
                    <input type="text" class="persist" name="SoupWaiter.kitchen_user" id="kitchen_api" value="{{ soup.kitchen_api }}"/>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock form_content -%}{% endembed %}
{% endblock content %}
