{% extends "tease.twig" %}

{% block content %}
    <div class="col-lg-3 col-sm-4 img">
        {% if post.thumbnail.src %}
            <img src="{{ post.thumbnail.src('thumbnail')|tojpg }}"
                 alt="{{ post.thumbnail.alt }}"
                 title="{{ post.thumbnail.title }}"
            />
        {% endif %}
    </div>
    <div class="col-lg-9 col-sm-8 ">
        <h2 class="h2">
            <span class="align-left">{{post.title}}</span>
            <span class="align-right">{{ post.status=='draft'? 'draft': post.date|time_ago }}</span>
        </h2><span class="clear"></span>
        <p>{{ post.get_preview(30) }}</p>
    </div>
{% endblock %}